# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure OpenAI Deployment Names
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4.1-mini
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT_NAME=text-embedding-3-large

# Azure OpenAI Model Names
AZURE_OPENAI_CHAT_MODEL_NAME=gpt-4.1-mini
AZURE_OPENAI_EMBEDDINGS_MODEL_NAME=text-embedding-3-large

# Azure Document Intelligence (Optional)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-key-here

# PostgreSQL Configuration (Optional - for vector store)
POSTGRES_CONNECTION_STRING=postgresql+psycopg://langchain:langchain@localhost:6024/langchain

# Opik Configuration (for tracing and observability)
OPIK_URL_OVERRIDE=http://localhost:5173/api
OPIK_WORKSPACE=default
OPIK_PROJECT_NAME=customer-support
OPIK_API_KEY=
OPIK_ENABLED=true
